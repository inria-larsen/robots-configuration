<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE devices PUBLIC "-//YARP//DTD robotInterface 1.0//EN" "http://www.icub.org/DTD/robotInterfaceV1.0.dtd">

<devices robot="iCubEdinburgh01" build="1">

    <device name="right_arm-j4_7-mc" type="embObjMotionControl">
    
        <params file="general.xml" />
        <params file="hardware/electronics/right_arm-j4_7-eln.xml" />
        <params file="hardware/mechanicals/right_arm-j4_7-mec.xml" />
        
        <params file="hardware/motorControl/right_arm-j4_7-mc-service.xml" />

        <!-- joint number in sub-part           0               1               2               3              -->
        <!-- joint name                         "l_wrist_prosup" "l_wrist_pitch" "l_wrist_yaw"  "l_hand_finger" -->     
        <group name="LIMITS">
            <param name="jntPosMax">                 60          25             35             60          </param>
            <param name="jntPosMin">                -60         -70            -15             10          </param> 
            <param name="hardwareJntPosMax">         90          30             35             60          </param>
            <param name="hardwareJntPosMin">        -90         -80            -15             10          </param> 
            <param name="rotorPosMax">              0           0               0              0           </param>
            <param name="rotorPosMin">              0           0               0              0           </param> 
            <param name="jntVelMax">                1000        1000            1000           1000        </param>
            <param name="motorOverloadCurrents">   10000        2000            2000           2000        </param>
            <param name="motorNominalCurrents">     5000        1000            1000            600        </param>
            <param name="motorPeakCurrents">        5000        2000            2000           1000        </param>
            <param name="motorPwmLimit">            3360        3360            3360           3360        </param>
           </group>
    
        <group name="IMPEDANCE">
            <param name="stiffness">            0.0         0.0     0.0         0.0             </param>
            <param name="damping">              0.0         0.0     0.0         0.0             </param>
        </group>

        <group name="POSITION_CONTROL">
            <param name="controlLaw">       joint_pid_v1                                        </param>    
            <param name="controlUnits">     metric_units                                        </param> 
            <param name="kp">                 200.0     500.0       500.0       500.0           </param>       
            <param name="kd">                   0.0       0.0         0.0         0.0           </param>     
            <param name="ki">                 200.0      50.0        50.0        50.0           </param>       
            <param name="maxOutput">            3360     3360        3360        3360           </param>  
            <param name="maxInt">               3360     3360        3360        3360           </param> 
            <param name="shift">                0           0           0           0           </param>       
            <param name="ko">                   0           0           0           0           </param>  
            <param name="stictionUp">           0           0           0           0           </param> 
            <param name="stictionDwn">          0           0           0           0           </param> 
            <param name="kff">                  0           0           0           0           </param> 
        </group>
    
        <group name="TORQUE_CONTROL">
            <param name="controlLaw">       motor_pid_with_friction_v1                   </param>    
            <param name="controlUnits">     metric_units                                 </param> 
            <param name="kp">                1000           0           0           0    </param>    
            <param name="kd">                   0           0           0           0    </param>        
            <param name="ki">                   0           0           0           0    </param>        
            <param name="maxOutput">         3360           0           0           0    </param>       
            <param name="maxInt">             500           0           0           0    </param>       
            <param name="shift">                0           0           0           0    </param>        
            <param name="ko">                   0           0           0           0    </param>        
            <param name="stictionUp">           0           0           0           0    </param>        
            <param name="stictionDwn">          0           0           0           0    </param>        
            <param name="kff">                  0           0           0           0    </param>    
            <param name="kbemf">                0           0           0           0    </param>     
            <param name="filterType">           0           0           0           0    </param>            
            <param name="ktau">                 1           0           0           0    </param>   
        </group>
       
    </device> 
    
</devices>
